  <body class="hire-login">
     <section class='p-lg-5 p-md-5 m-5'>
         <div class="container hire-login-container p-5">
             <div class=" text-center pb-4 h2 hire-login-title">GET Started with EaZBuD</div>
             <form action="/index" method="GET" id="loginForm">
                <div class="form-group">
                    <label for="exampleInputEmail1" class="hire-login-subtitle h6">Full Name:</label>
                    <input type="text" name="name"class="form-control" id="name" aria-describedby="name" placeholder="" required>
                  </div>
                  <br/>
                  <div class="form-group">
                    <label for="exampleInputEmail1" class="hire-login-subtitle h6">Age :</label>
                    <input type="number" name="number"class="form-control" id="age" aria-describedby="emailHelp" placeholder="" required>
                  </div>
                  <br/>
                <div class="form-group">
                  <label for="exampleInputEmail1" class="hire-login-subtitle h6">Email :</label>
                  <input type="email" name="email"class="form-control" id="email" aria-describedby="emailHelp" placeholder="" required>
                </div>
                <br/>

                <div class="form-group">
                  <label for="exampleInputPassword1"  class="hire-login-subtitle h6">Password :</label>
                  <input type="password" name="password" class="form-control" id="password" placeholder="" required>
                </div>
                <br />
                <button type="submit" class="hire-login-submit p-2 w-100">LOGIN</button>
                <small class="hire-login-small align-items-center text-center px-lg-5 mx-lg-2">Already have a account <a href="/login">login here</a></small>
                <center><small><span id="error-message"></span></small></center>
              </form>
         </div>
     </section>
